@page "/info"

@inject IStringLocalizer<InfoPage> Text


<PageTitle>@Text["page_title"]</PageTitle>

<MudStack Spacing="8">
    <MudText Typo="Typo.h4" Class="mb-n6" Align="Align.Center">
        <bold>@Text["page_title"]</bold>
    </MudText>

    <MudImage Fluid="true" Width="400" Alt="Hello There" Class="rounded-lg my-4 align-self-center" Src=@RandomHelloGif() />


    <MudDivider />


    <MudText Typo="Typo.h6" Class="mb-n6" Align="Align.Center">
        @Text["section_1"]
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_1"]
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_2"]
    </MudText>


    <MudDivider />


    <MudText Typo="Typo.h6" Class="mb-n6" Align="Align.Center">
        @Text["section_2"]
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_3"]
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_4"]
    </MudText>


    <MudDivider />


    <MudText Typo="Typo.h6" Class="mb-n6" Align="Align.Center">
        @Text["section_3"]
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_5"]
    </MudText>

    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["about_6"]
    </MudText>

    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["github"]
    </MudText>

    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["linkedin"]
    </MudText>

    <MudText Typo="Typo.body1" Align="Align.Center">
        @Text["lastfm"]
    </MudText>

    <MudText Typo="Typo.body1" Class="mb-n4" Align="Align.Center">
        @Text["social_media"]
    </MudText>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">

    <div class="d-flex gap-6 justify-center">
        <MudFab Size="@Size.Large" IconSize="@Size.Large" Color="Color.Primary" StartIcon="@Icons.Custom.Brands.GitHub" aria-label="GitHub" Link="https://github.com/BuenoVini" Target="_blank" />
        <MudFab Size="@Size.Large" IconSize="@Size.Large" Color="Color.Info" StartIcon="@Icons.Custom.Brands.LinkedIn" aria-label="LinkedIn" Link="https://www.linkedin.com/in/vin%C3%ADcius-bueno-9ba334228/" Target="_blank" />
        <MudFab Size="@Size.Large" IconSize="@Size.Large" Color="Color.Error" StartIcon="fa-brands fa-lastfm" aria-label="Last.fm" Link="https://www.last.fm/user/Vini_Bueno" Target="_blank" />
    </div>


    <MudDivider />


    <MudText Typo="Typo.body2" Align="Align.Center">
        @Text["about_7"]
    </MudText>

    <MudText Typo="Typo.body2" Align="Align.Center">
        @Text["signature"]
    </MudText>
</MudStack>

@code {
    private string RandomHelloGif()
    {
        if (new Random().Next(1, 3) % 2 == 0)
            return "https://media.giphy.com/media/3ornk57KwDXf81rjWM/giphy.gif";
        else
            return "https://media.giphy.com/media/Nx0rz3jtxtEre/giphy.gif";
    }
}
